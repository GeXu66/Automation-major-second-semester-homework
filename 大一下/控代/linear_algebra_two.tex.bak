1.\[\begin{gathered}
  {\text{define }}f{\text{:}}{R^n} \to {P^{n - 1}} \hfill \\
  f(x) = {a_0} + {a_1}x +  \cdot  \cdot  \cdot  + {a_{n - 1}}{x^{n - 1}},{\text{and }}x = {({a_0},{a_1}, \cdot  \cdot  \cdot ,{a_{n - 1}})^T} \hfill \\
  {\text{one - to - one:every column vector }}x = {({a_0},{a_1}, \cdot  \cdot  \cdot ,{a_{n - 1}})^T}{\text{ uniquely pins a polynomial}} \hfill \\
  {a_0} + {a_1}x +  \cdot  \cdot  \cdot  + {a_{n - 1}}{x^{n - 1}} \hfill \\
  {\text{onto:}}\forall {\text{polynomial }}{a_0} + {a_1}x +  \cdot  \cdot  \cdot  + {a_{n - 1}}{x^{n - 1}},{\text{there is a column vector }}x = {({a_0},{a_1}, \cdot  \cdot  \cdot ,{a_{n - 1}})^T} \hfill \\
  {\text{in }}{R^n},{\text{fullfilling   }}f(x) = {a_0} + {a_1}x +  \cdot  \cdot  \cdot  + {a_{n - 1}}{x^{n - 1}} \hfill \\
  {\text{Linear:(1)}}f(x + y) = ({a_0} + {b_0}) + ({a_1} + {b_1})x +  \cdot  \cdot  \cdot  + ({a_{n - 1}} + {b_{n - 1}}){x^{n - 1}} \hfill \\
   = {a_0} + {a_1}x +  \cdot  \cdot  \cdot  + {a_{n - 1}}{x^{n - 1}} + {b_0} + {b_1}x +  \cdot  \cdot  \cdot  + {b_{n - 1}}{x^{n - 1}} = f(x) + f(y) \hfill \\
  (2)f(kx) = k{a_0} + k{a_1}x +  \cdot  \cdot  \cdot  + k{a_{n - 1}}{x^{n - 1}} = kf(x) \hfill \\
  {\text{so }}{R^n}{\text{ and }}{P^{n - 1}}{\text{ over the same field R (the field of real numbers) are isomorphic}}{\text{.}} \hfill \\
\end{gathered} \]
